# OpenAI API Key for TTS and DALL-E
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API Key for voice cloning
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Modal API Keys for GPU-powered services
MODAL_TOKEN_ID=your_modal_token_id_here
MODAL_TOKEN_SECRET=your_modal_token_secret_here

# Modal Voice Clone API URL (get from: modal app list)
MODAL_VOICE_CLONE_URL=https://your-workspace--voice-clone-clone-voice-endpoint.modal.run

# Modal Text-to-Video API URLs (get from: modal app list)
MODAL_LTX_VIDEO_URL=https://your-workspace--ltx-video-generate-video-api.modal.run
MODAL_MOCHI_URL=https://your-workspace--mochi-video-generate-video-api.modal.run
MODAL_HUNYUAN_URL=https://your-workspace--hunyuan-video-generate-video-api.modal.run
MODAL_WAN_URL=https://your-workspace--wan-video-generate-video-api.modal.run
MODAL_AVATAR_URL=https://your-workspace--longcat-avatar-generate-avatar-api.modal.run

# Google Gemini API Key for alternative image generation
GOOGLE_API_KEY=your_google_api_key_here

# Cloud Storage Configuration (S3 or R2)
# Choose provider: 's3' for Amazon S3 or 'r2' for Cloudflare R2
STORAGE_PROVIDER=s3
STORAGE_BUCKET=your-bucket-name

# Amazon S3 Configuration
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY_ID=your-s3-access-key-id
STORAGE_SECRET_ACCESS_KEY=your-s3-secret-access-key

# Cloudflare R2 Configuration (alternative to S3)
# STORAGE_PROVIDER=r2
# STORAGE_ACCOUNT_ID=your-cloudflare-account-id
# STORAGE_ACCESS_KEY_ID=your-r2-access-key-id
# STORAGE_SECRET_ACCESS_KEY=your-r2-secret-access-key

# Optional Storage Configuration
# STORAGE_ENDPOINT=https://custom-s3-endpoint.com
# STORAGE_PUBLIC_URL=https://cdn.yourdomain.com

# PostHog Analytics Configuration
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_api_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
POSTHOG_API_KEY=your_posthog_project_api_key_here
