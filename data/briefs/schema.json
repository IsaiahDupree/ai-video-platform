{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ContentBrief",
  "description": "Schema for Video Studio content briefs",
  "type": "object",
  "required": ["id", "format", "settings", "style", "sections"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the brief"
    },
    "format": {
      "type": "string",
      "enum": ["explainer_v1", "listicle_v1", "comparison_v1", "shorts_v1"],
      "description": "Video format template to use"
    },
    "version": {
      "type": "string",
      "description": "Brief schema version"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of creation"
    },
    "settings": {
      "type": "object",
      "required": ["resolution", "fps", "duration_sec", "aspect_ratio"],
      "properties": {
        "resolution": {
          "type": "object",
          "required": ["width", "height"],
          "properties": {
            "width": { "type": "integer", "minimum": 1 },
            "height": { "type": "integer", "minimum": 1 }
          }
        },
        "fps": {
          "type": "integer",
          "minimum": 1,
          "maximum": 120
        },
        "duration_sec": {
          "type": "number",
          "minimum": 0.1
        },
        "aspect_ratio": {
          "type": "string",
          "enum": ["9:16", "16:9", "1:1"]
        }
      }
    },
    "style": {
      "type": "object",
      "required": ["theme", "primary_color", "secondary_color", "accent_color"],
      "properties": {
        "theme": {
          "type": "string",
          "enum": ["dark", "light", "neon", "custom"]
        },
        "primary_color": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$"
        },
        "secondary_color": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$"
        },
        "accent_color": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$"
        },
        "font_heading": { "type": "string" },
        "font_body": { "type": "string" },
        "background_type": {
          "type": "string",
          "enum": ["solid", "gradient", "image", "video"]
        },
        "background_value": { "type": "string" }
      }
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "duration_sec", "content"],
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["intro", "topic", "comparison", "list_item", "outro", "transition", "hook", "content", "cta"]
          },
          "duration_sec": {
            "type": "number",
            "minimum": 0.1
          },
          "start_time_sec": {
            "type": "number",
            "minimum": 0
          },
          "content": {
            "type": "object",
            "description": "Section-specific content (varies by type)"
          }
        }
      }
    },
    "audio": {
      "type": "object",
      "properties": {
        "background_music": { "type": "string" },
        "voiceover": { "type": "string" },
        "volume_music": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "volume_voice": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  }
}
