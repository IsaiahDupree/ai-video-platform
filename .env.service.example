# Remotion Media Service Configuration

# =============================================================================
# Service Configuration
# =============================================================================
REMOTION_SERVICE_PORT=3100
REMOTION_SERVICE_HOST=localhost
REMOTION_SERVICE_API_KEY=your-secret-api-key-change-this
REMOTION_SERVICE_LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_BURST_SIZE=10

# Job Queue
JOB_QUEUE_MAX_CONCURRENT=10
JOB_QUEUE_DEFAULT_TIMEOUT_MS=1800000  # 30 minutes
JOB_QUEUE_MAX_RETRIES=3

# CORS
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:*,http://127.0.0.1:*

# =============================================================================
# External API Keys (from existing .env.local)
# =============================================================================
OPENAI_API_KEY=sk-...
ELEVENLABS_API_KEY=sk_...
HF_TOKEN=hf_...
PEXELS_API_KEY=...
PIXABAY_API_KEY=...
GOOGLE_API_KEY=...

# =============================================================================
# Modal Configuration
# =============================================================================
MODAL_API_URL=https://...
MODAL_API_KEY=...

# =============================================================================
# Storage
# =============================================================================
OUTPUT_DIR=./output
TEMP_DIR=./tmp
MAX_FILE_SIZE_MB=500
